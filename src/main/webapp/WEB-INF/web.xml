<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Gym</display-name>
    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>/WEB-INF/jsp/common/register.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>main</servlet-name>
        <jsp-file>/WEB-INF/jsp/common/main.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>appointment</servlet-name>
        <jsp-file>/WEB-INF/jsp/trainer/appointment.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>appointment</servlet-name>
        <url-pattern>/app</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <filter-mapping>
        <filter-name>filter2</filter-name>
        <url-pattern>/home</url-pattern>
        <url-pattern>/doAppoint</url-pattern>
        <url-pattern>/register</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>filter3</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <location>/WEB-INF/jsp/common/error.jsp</location>
    </error-page>
</web-app>
